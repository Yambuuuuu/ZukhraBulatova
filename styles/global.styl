//scale = 0 400px 600px 800px 1025px

* {
  box-sizing border-box

  &:after, &:before {
    box-sizing border-box
  }
}

body {
  min-width: 320px
  background-color var(--darkgray-bckg)
  color: var(--lightpurp)
  overflow-y auto
  background var(--main)

  // Блокировка скролла при открытом модальном окне с компенсацией ширины скроллбара
  &.modal-open {
    overflow hidden
    padding-right var(--scrollbar-width, 0px)

    // Скрываем хедер при открытом модальном окне только на мобильных
    +below(1025px) {
      .header {
        display none
      }
    }

    .navbar {
      right var(--scrollbar-width, 0px)
    }
  }
}

h1, h2, h3, h4, h5, h6 {
  margin 0
  padding 0
}

.container {
  margin 0 auto
  width: 100%
  padding: 0 var(--side-padding)
  max-width: calc(var(--container-width) + var(--side-padding) * 2)

  +below(1025px) {
    padding: 0 var(--side-mobile-padding)
  }
}

.container--mobile {
  margin 0 auto
  width: 100%
  padding 16px
}

.wrapper {
  display flex
  flex-direction column
  min-height 100vh
  overflow:hidden
}

a {
  text-decoration none
}

input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

/* Hide spin buttons in Firefox */
input[type="number"] {
  -moz-appearance: textfield;
}

img {
  max-width 100%
  max-height 100%
  object-fit: cover
}
