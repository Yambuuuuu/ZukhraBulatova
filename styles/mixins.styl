// Градиент
gradient(start-color, end-color, direction = to bottom)
  background linear-gradient(direction, start-color, end-color)

// Медиа-запросы
below(breakpoint)
  @media (max-width: breakpoint)
    {block}

above(breakpoint)
  @media (min-width: breakpoint)
    {block}
